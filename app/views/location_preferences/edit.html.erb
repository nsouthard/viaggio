<div class="divider">
<% if current_user %>
  <button type="button" class="btn btn-warning" onclick="window.location.href='/users/<%= current_user.id %>/'">Viaggio</button>
<% else %>
  <a href="/signup">Sign Up</a>
  <a href="/login">Log In</a>
<% end %>
<ul class="nav navbar-nav navbar-right">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <h4>Welcome <%= current_user.first_name %></h4> </a>
    <ul class="dropdown-menu">
      <li><a href="/users/<%= current_user.id %>/edit">Profile</a></li>
      <li><a href="/availabilities/<%= current_user.id %>/edit">Availability</a></li>
      <li><a href="/locations/<%= current_user.id %>/edit">Destinations</a></li>
      <li role="separator" class="divider"></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>
  </li>
</ul>
</div class="divider">

<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="user_budget">
        <h1>Travel Budget</h1>
        <%= form_tag "/location_preferences/#{location_preferences.id}", method: :patch do  %>
          <div class="form-group">
            <%= label_tag :min %>
            <%= text_field_tag :min, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :max %>
            <%= text_field_tag :max, nil, class: "form-control" %>
          </div>
          <%= submit_tag "Update Budget", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
